{
  "name": "consensus_sequence",
  "schema": {
    "type": "object",
    "required": [
      "sample",  
      "host",
      "experiment",
      "bioinformatics_qc_metrics"
    ],
    "properties": {
      "sample": {
        "type": "object",
        "required": [
            "sample_collected_id",
            "sample_collected_by",
            "sequence_submitted_by",
            "sample_collection_date",
            "geo_loc_country",
            "geo_loc_province",
            "organism",
            "isolate",  
            "purpose_of_sampling",
            "purpose_of_sampling_details",
            "anatomical_material",
            "anatomical_part",
            "body_product",
            "environmental_material",
            "environmental_site",
            "collection_device",
            "collection_method",
            "nml_submitted_speciment_type"
        ],
        "properties": {
          "sample_collected_id": {
            "type": [
              "string",
              "null"
            ]
          },
          "sample_collected_by": {
            "type": [
              "string",
              "null"
            ]
          },
          "sequence_submitted_by": {
            "type": [
              "string"
            ]
          },
          "sample_collection_date": {
            "type": "string",
            "format": "date"
          },
          "geo_loc_country": {
            "type": [
              "string",
              "null"
            ]
          },
          "geo_loc_province": {
            "type": [
              "string",
              "null"
            ]
          },
          "organism": {
            "enum": [
              "SARS-CoV-2"
            ]
          },
          "isolate": {
            "type": [
              "string"
            ]
          },
          "purpose_of_sampling": {
            "type": [
              "string",
              "null"
            ]
          },
          "purpose_of_sampling_details": {
            "type": [
              "string",
              "null"
            ]
          },
          "anatomical_material": {
            "type": [
              "string",
              "null"
            ]
          },
          "anatomical_part": {
            "type": [
              "string",
              "null"
            ]
          },
          "body_product": {
            "type": [
              "string",
              "null"
            ]
          },
          "environmental_material": {
            "type": [
              "string",
              "null"
            ]
          },
          "environmental_site": {
            "type": [
              "string",
              "null"
            ]
          },
          "collection_device": {
            "type": [
              "string",
              "null"
            ]
          },
          "collection_method": {
            "type": [
              "string",
              "null"
            ]
          },
          "nml_submitted_speciment_type": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "propertyNames": {
          "enum": [
            "sample_collected_id",
            "sample_collected_by",
            "sequence_submitted_by",
            "sample_collection_date",
            "geo_loc_country",
            "geo_loc_province",
            "organism",
            "isolate",  
            "purpose_of_sampling",
            "purpose_of_sampling_details",
            "anatomical_material",
            "anatomical_part",
            "body_product",
            "environmental_material",
            "environmental_site",
            "collection_device",
            "collection_method",
            "nml_submitted_speciment_type"
          ]
        }
      },
      "host": {
        "type": "object",
        "required": [
            "host_scientific_name",
            "host_disease",
            "host_age",
            "host_age_bin",
            "host_age_unit",
            "host_gender"
        ],
        "properties": {
          "host_scientific_name": {
            "enum": [
              "Homo sapiens"
            ]
          },
          "host_disease": {
            "enum": [
                "COVID-19"
            ]
          },
          "host_age": {
            "type": [
              "integer",
              "null"
            ]
          },
          "host_age_bin": {
            "type": [
              "string",
              "null"
            ]
          },
          "host_gender": {
            "enum": [
              "Male",
              "Female",
              "Unknown"
            ]
          },
          "host_age_unit": {
            "enum": [
              "years",
              "months"
            ]
          }
        },
        "propertyNames": {
          "enum": [
            "host_scientific_name",
            "host_disease",
            "host_age",
            "host_age_bin",
            "host_age_unit",
            "host_gender"
          ]
        }
      },
      "experiment": {
        "type": "object",
        "required": [
          "sequencing_instrument",
          "purpose_of_sequencing",
          "purpose_of_sequencing_details"
        ],
        "properties": {
          "sequencing_instrument": {
            "enum": [
              "Nanopore MinION",
              "Illumina_NexteraFlex",
              "ONT_ARTIC", 
              "MGI_CleanPlex"
            ]
          },
          "purpose_of_sequencing": {
            "type": [
                "string",
                "null"
            ]
          },
          "purpose_of_sequencing_details": {
            "type": [
                "string",
                "null"
            ]
          }
        },
        "propertyNames": {
          "enum": [
            "sequencing_instrument",
            "purpose_of_sequencing",
            "purpose_of_sequencing_details"
          ]
        }
      },
      "bioinformatics_qc_metrics": {
        "type": "object",
        "required": [
            "consensus_sequence_software_name",
            "consensus_sequence_software_version"
          ],
          "properties": {
            "consensus_sequence_software_name": {
              "type": [
                  "string",
                  "null"
              ]
            },
            "consensus_sequence_software_version": {
              "type": [
                  "string",
                  "null"
              ]
            }
          },
          "propertyNames": {
            "enum": [
                "consensus_sequence_software_name",
                "consensus_sequence_software_version"
            ]
          }
      }
    }
  }
}